---
import GoogleAnalytics from "../components/google-analytics.astro";

const CF_ANALYTICS_TOKEN = import.meta.env.CF_ANALYTICS_TOKEN;
const MEASUREMENT_ID = import.meta.env.GA_MEASUREMENT_ID;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Tanmoy Banik - Software Engineer & Full Stack Developer specializing in React, Node.js, TypeScript, and cloud technologies"
    />
    <meta name="viewport" content="width=device-width" />
    <meta name="theme-color" content="#6ee7b7" />
    <link rel="manifest" href="/site.webmanifest" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="sitemap" href="/sitemap-index.xml" />

    <!-- Preconnect to origins -->
    <link rel="preconnect" href="https://fonts.googleapis.com" crossorigin />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <!-- Inline critical CSS -->
    <style is:inline>
      /* Critical CSS for initial page load */
      body {
        margin: 0;
        font-family: "Inter", sans-serif;
        background-color: #1a1a1a;
        color: #ffffff;
      }
    </style>

    <!-- Defer non-critical CSS -->
    <link
      rel="preload"
      href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&family=Source+Code+Pro:ital,wght@0,200..900;1,200..900&display=swap"
      as="style"
      onload="this.onload=null;this.rel='stylesheet'"
    />
    <noscript>
      <link
        rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&family=Source+Code+Pro:ital,wght@0,200..900;1,200..900&display=swap"
      />
    </noscript>

    <title>Tanmoy Banik - Software Engineer | Full Stack Developer</title>
    <meta
      name="description"
      content="Experienced software engineer with 7+ years of expertise in back-end, front-end, and DevOps technologies. Proficient in various programming languages, databases, and frameworks for software development."
    />
    <meta
      name="keywords"
      content="software engineer,back-end,front-end,DevOps,Node.js,Java,Golang,Python,TypeScript,React,Next.js,REST,GraphQL"
    />

    <!-- Open Graph / Social Media Tags -->
    <meta
      property="og:title"
      content="Tanmoy Banik - Software Engineer | Full Stack Developer"
    />
    <meta
      property="og:description"
      content="Experienced software engineer with 7+ years of expertise in back-end, front-end, and DevOps technologies."
    />
    <meta property="og:url" content="https://tanmoybanik.me/" />
    <meta property="og:image" content="https://tanmoybanik.me/images/me.jpg" />
    <meta property="og:type" content="website" />

    <!-- Twitter Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@tanmoy_banik" />
    <meta
      name="twitter:title"
      content="Tanmoy Banik - Software Engineer | Full Stack Developer"
    />
    <meta
      name="twitter:description"
      content="Experienced software engineer with 7+ years of expertise in back-end, front-end, and DevOps technologies."
    />
    <meta name="twitter:image" content="https://tanmoybanik.me/images/me.jpg" />

    <!-- Cloudflare Web Analytics - loads after page content -->
    <script
      is:inline
      type="text/partytown"
      defer
      src="https://static.cloudflareinsights.com/beacon.min.js"
      data-cf-beacon=`{"token": "${CF_ANALYTICS_TOKEN}"}`></script>

    <!-- Google Analytics - using Partytown for performance -->
    <GoogleAnalytics measurementId={MEASUREMENT_ID} />

    <!-- Additional styles loaded after critical content -->
    <style>
      @keyframes tubelight {
        0% {
          transform: scale(0.9);
          opacity: 0;
        }
        5% {
          transform: scale(1.02);
          opacity: 1;
        }
        10% {
          transform: scale(0.98);
          opacity: 0.3;
        }
        15% {
          transform: scale(1);
          opacity: 1;
        }
        40% {
          transform: scale(0.95);
          opacity: 0;
        }
        50% {
          transform: scale(0.92);
          opacity: 0;
        }
        60% {
          transform: scale(1.01);
          opacity: 1;
        }
        70% {
          transform: scale(1);
          opacity: 1;
        }
        100% {
          transform: scale(1);
          opacity: 1;
        }
      }

      .animate-tubelight {
        animation: tubelight 3s ease-out forwards;
      }

      html {
        scroll-behavior: smooth;
      }

      /* Respect user's motion preferences */
      @media (prefers-reduced-motion: reduce) {
        html {
          scroll-behavior: auto;
        }

        .animate-tubelight,
        .transition-all,
        .transition-transform,
        .transition-colors {
          transition: none !important;
          animation: none !important;
        }
      }

      /* Screen reader only class */
      .sr-only {
        position: absolute;
        width: 1px;
        height: 1px;
        padding: 0;
        margin: -1px;
        overflow: hidden;
        clip: rect(0, 0, 0, 0);
        white-space: nowrap;
        border: 0;
      }

      /* Focus indicators */
      .focus-visible:focus {
        outline: 2px solid #6ee7b7;
        outline-offset: 2px;
      }

      /* High contrast mode support */
      @media (prefers-contrast: high) {
        .text-gray-400 {
          color: #ffffff;
        }
        .text-gray-300 {
          color: #ffffff;
        }
      }
    </style>
  </head>
  <body>
    <!-- Skip navigation link -->
    <a
      href="#main-content"
      class="sr-only focus:not-sr-only focus:absolute focus:top-0 focus:left-0 bg-emerald-400 text-black px-4 py-2 z-50 focus:z-[60]"
    >
      Skip to main content
    </a>
    <slot />
  </body>
</html>
